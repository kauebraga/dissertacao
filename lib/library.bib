doi = {10.1080/13658816.2014.914521},
isbn = {1365-8816},
issn = {13623087},
journal = {International Journal of Geographical Information Science},
number = {11},
title = {{Detecting the dynamics of urban structure through spatial network analysis}},
volume = {28},
year = {2014}
}
