doi = {10.1073/pnas.1815928115},
file = {:home/kaue-novo/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Huang et al. - 2018 - Tracking job and housing dynamics with smartcard data.pdf:pdf},
isbn = {1815928115},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
pages = {1--6},
title = {{Tracking job and housing dynamics with smartcard data}},
